<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Money Tracker</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="#">Money Tracker</a>
        <!-- Add navigation links if needed -->
    </nav>

    <div class="container">
        <div class="jumbotron text-center">
            <h1 class="display-4">Money Tracker</h1>
            <p class="lead">Track your expenses and income with ease.</p>
        </div>

        <div class="card">
            <div class="card-body">
                <!-- Inside the card-body div -->
                <div class="container">
                    <div class="row">
                        <!-- Money Entry Form -->
                        <div class="col-md-6 mb-4">
                            <h4 class="mb-3">Add New Entry</h4>
                            <form id="moneyEntryForm" action="/addEntry" method="POST">
                                <div class="form-group">
                                    <label for="description">Description:</label>
                                    <input type="text" class="form-control" id="description" name="description" required>
                                </div>
                                <div class="form-group">
                                    <label for="amount">Amount ($):</label>
                                    <input type="number" class="form-control" id="amount" name="amount" step="0.01" required>
                                </div>
                                <div class="form-group">
                                    <label for="type">Type:</label>
                                    <select class="form-control" id="type" name="type" required>
                                        <option value="Expense">Expense</option>
                                        <option value="Income">Income</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Add Entry</button>
                            </form>
                        </div>

                        <!-- Money Entry List -->
                        <div class="col-md-6">
                            <h4 class="mb-3">Recent Entries</h4>
                            <ul class="list-group" id="entryList">
                                <!-- Display existing entries dynamically here -->
                                <% entries.forEach(entry => { %>
                                <li class="list-group-item">
                                    <strong><%= entry.description %></strong>
                                    <span class="float-right">
                                        <%= entry.type === 'Expense' ? '-' : '+' %> $<%= entry.amount.toFixed(2) %>
                                    </span>
                                </li>
                                <% }); %>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>
